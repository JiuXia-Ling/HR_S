
@{
    Layout = null;
}

<!DOCTYPE html>
@using HRModel
@model usersModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>人力资源管理系统登录</title>
    <style type=text/css>
        body {
            font-size: 12px;
            color: #ffffff;
            font-family: 宋体
        }

        td {
            font-size: 12px;
            color: #ffffff;
            font-family: 宋体
        }
    </style>
    <script type="text/javascript"
            src="~/javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="~/javascript/jquery.messager.js">
    </script>
    <script type="text/javascript"
            src="~/javascript/login.js">
    </script>
</head>
<body>
    <div>
        @using (Ajax.BeginForm("Index", "Longin", new AjaxOptions() { HttpMethod = "Post" }))
        {
            <div>
                <table cellspacing=0 cellpadding=0 width=900 align=center border=0>
                    <tbody>
                        <tr>
                            <td style="height: 105px">
                                <img src="~/images/login_11.gif" border=0>
                            </td>
                        </tr>
                        <tr>
                            <td background=~/images/login_22.jpg height=300>
                                <table height=300 cellpadding=0 width=900 border=0>
                                    <tbody>
                                        <tr>
                                            <td colspan=2 height=35></td>
                                        </tr>
                                        <tr>
                                            <td width=360></td>
                                            <td>
                                                <table cellspacing=0 cellpadding=2 border=0>
                                                    <tbody>
                                                        <tr>
                                                            <td style="height: 28px" width=80>
                                                                登 录 名：
                                                            </td>
                                                            <td style="height: 28px" width=150>
                                                                @Html.TextBoxFor(e => e.u_name, new { placeholder = "请输入姓名", autocomplete = "off" })
                                                                @Html.ValidationMessageFor(e => e.u_name)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="height: 28px">
                                                                登录密码：
                                                            </td>
                                                            <td style="height: 28px">
                                                                @Html.PasswordFor(e => e.u_password, new { placeholder = "请输入密码", autocomplete = "off" })
                                                                @Html.ValidationMessageFor(e => e.u_password)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="height: 18px"></td>
                                                            <td style="height: 18px"></td>
                                                            <td style="height: 18px"></td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <input type="submit" value="登录" style="cursor: pointer;" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="~/images/login_33.jpg" border=0>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
</body>
</html>
