
@{
    Layout = null;
}

<!DOCTYPE html>
@using Model
@model config_public_char

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>public_char_add</title>
</head>
<body>
    <div>
        @using (Ajax.BeginForm("public_char_add", "Client", new AjaxOptions() { HttpMethod="Post"}))
        {
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置--公共属性添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1" width="19%">
                        属性种类
                    </td>
                    <td class="TD_STYLE2" width="81%">
                        @Html.TextBoxFor(e => e.attribute_kind, new { @class = "TEXTAREA_STYLE1", placeholder = "请输入属性种类", autocomplete = "off" })
                        @Html.ValidationMessageFor(e => e.attribute_kind)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        属性名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBoxFor(e => e.attribute_name, new { @class = "TEXTAREA_STYLE1", placeholder = "请输入属性名称", autocomplete = "off" })
                        @Html.ValidationMessageFor(e => e.attribute_name)
                    </td>
                </tr>
            </table>
        }

    </div>
</body>
</html>
