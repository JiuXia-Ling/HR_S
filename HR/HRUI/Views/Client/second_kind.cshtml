
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>second_kind</title>
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css"></link>
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">

		function submission(){
			document.forms[0].submit();
		}

		function page(currentPage){
			document.getElementById("pid").value=currentPage;
			document.forms[0].submit();
		}
</script>
</head>
<body>
    <div id="div1">
        <form action="../customiz/customizAction!findSecondKind" method="post">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @Html.ActionLink("添加", "second_kind_register", new { }, new { @class = "BUTTON_STYLE1" })
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="15%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        II级机构编号
                    </td>
                    <td width="15%" class="TD_STYLE1">
                        II级机构名称
                    </td>
                    <td width="22%" class="TD_STYLE1">
                        薪酬发放责任人编号
                    </td>
                    <td width="22%" class="TD_STYLE1">
                        销售责任人编号
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        变更
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>
                <tr v-for="(item,index) in dt" :key="index">
                    <td class="TD_STYLE2">
                        {{item.first_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.second_kind_id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.second_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.second_salary_id}}
                    </td>
                    <td class="TD_STYLE2">
                        {{item.second_sale_id}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-bind:href="'/Client/second_kind_change/'+[item.fsk_id]">变更</a>
                    </td>
                    <td class="TD_STYLE2">
                        <a v-on:click="Del([item.fsk_id])">删除</a>
                    </td>
                </tr>
            </table>
            <br><br>
        </form>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt: []
            },
            methods: {
                Load: function () {
                    var t = this;
                    $.ajax({
                        type: "post",
                        url: "/Client/Select2",
                        success: function (date) {
                            var arr = eval("(" + date + ")");
                            t.dt = arr;
                        }
                    })
                },
                Del: function (id) {
                    var t = this;
                    if (confirm("确认删除吗?")) {
                        $.ajax({
                            type: "post",
                            data: "id=" + id,
                            url: "/Client/fskDel",
                            success: function (date) {
                                if (date == "1") {
                                    alert("删除成功");
                                    t.Load();
                                }
                            }
                        })
                    }
                }
            },
            mounted: function () {
                this.Load();
            }
        })
    </script>
</body>
</html>
