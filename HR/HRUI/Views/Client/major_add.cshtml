
@{
    Layout = null;
}

<!DOCTYPE html>
@using Model
@model config_major
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>major_add</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
</head>
<body>
    <div>
        @using (Ajax.BeginForm("major_add", "Client", new AjaxOptions() { HttpMethod = "Post" }))
        {
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置--职位添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               onclick="history.back();">
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">

                <tr>
                    <td class="TD_STYLE1" width="19%">
                        职位分类编号
                    </td>
                    <td class="TD_STYLE2" width="81%">
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1" width="19%">
                        职位分类名称
                    </td>
                    <td class="TD_STYLE2" width="81%">
                        @Html.DropDownListFor(e => e.major_kind_id, ViewData["s"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "width:80px" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1" width="19%">
                        职位编号
                    </td>
                    <td class="TD_STYLE2" width="81%">
                        @Html.TextBoxFor(e => e.major_id, new { @class = "TEXTAREA_STYLE1", placeholder = "请输入I级机构名称", autocomplete = "off" })
                        @Html.ValidationMessageFor(e => e.major_id)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1" width="19%">
                        职位名称
                    </td>
                    <td class="TD_STYLE2" width="81%">
                        @Html.TextBoxFor(e => e.major_name, new { @class = "TEXTAREA_STYLE1", placeholder = "请输入I级机构名称", autocomplete = "off" })
                        @Html.ValidationMessageFor(e => e.major_name)
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
