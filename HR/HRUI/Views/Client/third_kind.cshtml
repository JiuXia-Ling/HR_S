
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>third_kind</title>
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css"></link>
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>

    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head >
<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添加", "third_kind_register", new { }, new { @class = "BUTTON_STYLE1" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="14%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="14%" class="TD_STYLE1">
                    III级机构名称
                </td>
                <td width="17%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="17%" class="TD_STYLE1">
                    是否为零售店
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in dt" :key="index">
                <td class="TD_STYLE2">
                    {{item.first_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_sale_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_is_retail}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="'/Client/third_kind_change/'+[item.ftk_id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    <a v-on:click="Del([item.ftk_id])">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt: []
            },
            methods: {
                Load: function () {
                    var t = this;
                    $.ajax({
                        type: "post",
                        url: "/Client/Select3",
                        success: function (date) {
                            t.dt = eval("(" + date + ")");
                        }
                    })
                },
                Del: function (id) {
                    var t = this;
                    if (confirm("确认删除吗?")) {
                        $.ajax({
                            type: "post",
                            data: "id=" + id,
                            url: "/Client/skDel",
                            success: function (date) {
                                if (date == "1") {
                                    alert("删除成功");
                                    t.Load();
                                }
                            }
                        })
                    }
                }
            },
            mounted: function () {
                this.Load();
            }
        })
    </script>
</body>  
</html >
