
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>profession_design</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>

    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职称设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right"></td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="80%" class="TD_STYLE1">
                    职称名称
                </td>
                <td width="20%" class="TD_STYLE1" align="center">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in dt" :key="index">
                <td class="TD_STYLE2">
                    {{item.major_name}}
                </td>
                <td class="TD_STYLE2" align="center">
                    <a v-on:click="Del([item.mak_id])">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt: []
            },
            methods: {
                Load: function () {
                    var t = this;
                    $.ajax({
                        type: "post",
                        url: "/Client/Select4",
                        success: function (date) {
                            t.dt = eval("(" + date + ")");
                        }
                    })
                },
                Del: function (id) {
                    var t = this;
                    if (confirm("确认删除吗?")) {
                        $.ajax({
                            type: "post",
                            data: "id=" + id,
                            url: "/Client/CMDel",
                            success: function (date) {
                                if (date == "1") {
                                    alert("删除成功");
                                    t.Load();
                                }
                            }
                        })
                    }
                }
            },
            mounted: function () {
                this.Load();
            }
        })
    </script>
</body>
</html>
